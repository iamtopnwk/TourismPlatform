<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#E0E0E0"
	tools:context="com.infotop.tourismplatform.popularplaces.PopularPlacesActivity" >
    
    <TextView 
     
       android:id="@+id/txt_popplace_head"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:text="@string/txt_popplace_head"
       android:paddingLeft="100dp"
       android:paddingTop="15dp"
       android:background="#ffffff"/>
   <ListView 
       android:id="@+id/popularplace_list"
       android:layout_below="@id/txt_popplace_head"
       android:layout_marginTop="10dp"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:divider="@null">
       
   </ListView>
    
    
</RelativeLayout>
