<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.infotop.tourismplatform.localtransfer.LocalTransferActivity" >

    <ImageButton 
        android:id="@+id/local_transport_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:src="@drawable/activity_title_layout_back"
        android:onClick="localTransportBack"/>
    
    <TextView 
     
       android:id="@+id/txt_local_transport_head"
       android:layout_toRightOf="@id/local_transport_back_btn"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:text="@string/txt_local_transport_head"
       android:paddingLeft="50dp"
       android:paddingTop="15dp"
       android:background="#ffffff"/>
    
    <ListView 
        android:id="@+id/local_transport_list"
        android:layout_below="@id/txt_local_transport_head"
      
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:divider="@null">
        
    </ListView>
</RelativeLayout>
